{
  "name": "heroku-jjuhey",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:JJuhey/heroku-jjuhey.git",
  "author": "JJuhey <dallicjh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "nodemon --exec babel-node ./server/index.ts --extensions '.ts'",
    "client": "cd client && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "start": "node ./build/index",
    "client-build": "cd client && yarn && yarn build",
    "build": "yarn clean && yarn && yarn babel-build",
    "babel-build": "babel -d --out-dir ./build ./server -s --extensions '.ts' --source-maps inline && babel -d ./build ./server",
    "clean": "rm -rf ./build && mkdir ./build",
    "heroku-postbuild": "yarn build && yarn client-build"
  },
  "dependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.13",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "concurrently": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.11.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.4",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  }
}
